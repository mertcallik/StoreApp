@page 
@model CartModel
@{
    ViewData["Title"] = "Cart";
}



<div>
    <section class="h-100">
        <div class="container h-100 py-5">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-10">
                    @foreach (var item in Model?.Cart?.Items??Enumerable.Empty<CartItem>())
                    {
                        <div class="card rounded-3 mb-4">
                            <div class="card-body p-4">
                                <div class="row d-flex justify-content-between align-items-center">
                                    <div class="col-md-2 col-lg-2 col-xl-2">
                                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-shopping-carts/img1.webp"
                                             class="img-fluid rounded-3" alt="Cotton T-shirt">
                                    </div>
                                    <div class="col-md-3 col-lg-3 col-xl-3">
                                        <p class="lead fw-normal mb-2">@item.Product.Name</p>
                                        <p><span class="text-muted">Ürün Fiyatı: </span>@item.Product.Price.ToString("C0")</p>
                                        <p><span class="text-muted">Açıklama: </span>@item.Product.Description</p>

                                    </div>
                                    <div class="col-md-1 col-lg-1 col-xl-1 d-flex justify-content-center">

                                        <span class="form-label " >@item.Quantity</span>
                                    </div>
                                    <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                        <h5 class="mb-0">@((item.Quantity*item.Product.Price).ToString("C0"))</h5>
                                    </div>
                                    <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                        <form asp-page-handler="Remove" asp-page="/Cart" method="post">
                                            <input type="hidden" asp-for="@item.Product.Id" name="id"/>
                                            <button type="submit" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash3"></i> Ürünü Sil</button>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                    }

                    <div class="card">
                        <div class="card-body">
                            <div class="card my-2">
                                <div class="card-body ">
                                    <div class="d-flex justify-content-around align-items-center gap-4">
                                        <div>
                                            <h4>Toplam Fiyat: @Model.Cart.CalculateTotal().ToString("C0")</h4>
                                        </div>
                                        <div>
                                            <a asp-action="CheckOut" asp-controller="Order" type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-warning  btn-lg">Satın Al</a>

                                        </div>
                                        <div>
                                            <a asp-action="Index" asp-route-category=" " asp-route-page=" "  data-mdb-button-init data-mdb-ripple-init class="btn btn-danger  btn-lg">Alışverişe Devam Et</A>
                                        </div>
                                    </div>
                                    


                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</div>
