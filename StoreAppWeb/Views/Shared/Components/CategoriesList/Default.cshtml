@model IQueryable<CategoryViewModel>
@{
}
<div class="d-grid gap-1">
    <a asp-controller="Home" asp-action="Index" asp-route-category=" " asp-route-page="1" class="@(ViewBag.SelectedCategory ==null ?"btn btn-sm btn-primary":"btn btn-sm btn-outline-primary")">AnaSayfa</a>
    <hr/>
    @foreach (var category in Model)
    {
        <h6>
            <a asp-controller="Home" asp-action="Index" asp-route-category="@category.Url" class="@(ViewBag.SelectedCategory == category.Url?"btn btn-sm btn-primary w-100":"btn btn-sm w-100 btn-outline-primary")">
                @category.Name
            </a>
            </h6>
        <hr/>
    }
</div>
